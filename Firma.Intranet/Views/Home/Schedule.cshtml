@{
    ViewData["Title"] = "Grafik jazd";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Grafik jazd</h1>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRideModal">
            <i class="fas fa-plus"></i> Dodaj jazdę
        </button>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                        <input type="date" class="form-control" id="scheduleDate">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="instructorFilter">
                        <option value="">Wszyscy instruktorzy</option>
                        <option>Jan Nowak</option>
                        <option>Maria Kwiatkowska</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="horseFilter">
                        <option value="">Wszystkie konie</option>
                        <option>Książę</option>
                        <option>Luna</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="statusFilter">
                        <option value="">Wszystkie statusy</option>
                        <option>Potwierdzone</option>
                        <option>Oczekujące</option>
                        <option>Anulowane</option>
                    </select>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Godzina</th>
                            <th>Klient</th>
                            <th>Koń</th>
                            <th>Instruktor</th>
                            <th>Status</th>
                            <th>Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>2024-01-20</td>
                            <td>10:00</td>
                            <td>Anna Kowalska</td>
                            <td>Książę</td>
                            <td>Jan Nowak</td>
                            <td><span class="badge bg-success">Potwierdzona</span></td>
                            <td>
                                <button class="btn btn-sm btn-info me-1"><i class="fas fa-edit"></i></button>
                                <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addRideModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Dodaj nową jazdę</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Data</label>
                        <input type="date" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Godzina</label>
                        <input type="time" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Klient</label>
                        <select class="form-select">
                            <option>Anna Kowalska</option>
                            <option>Piotr Wiśniewski</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Koń</label>
                        <select class="form-select">
                            <option>Książę</option>
                            <option>Luna</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Instruktor</label>
                        <select class="form-select">
                            <option>Jan Nowak</option>
                            <option>Maria Kwiatkowska</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                <button type="button" class="btn btn-primary">Zapisz</button>
            </div>
        </div>
    </div>
</div>