@{
    ViewData["Title"] = "Home Page";
}


<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Panel główny</h1>
        <div class="date-display">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="stat-card primary">
                <div class="stat-card-body">
                    <h6 class="stat-card-title">Dzisiejsze jazdy</h6>
                    <h2 class="stat-card-number">12</h2>
                    <p class="stat-card-desc">4 zakończone</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card success">
                <div class="stat-card-body">
                    <h6 class="stat-card-title">Aktywne konie</h6>
                    <h2 class="stat-card-number">28</h2>
                    <p class="stat-card-desc">2 w odpoczynku</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card warning">
                <div class="stat-card-body">
                    <h6 class="stat-card-title">Nowi klienci</h6>
                    <h2 class="stat-card-number">5</h2>
                    <p class="stat-card-desc">w tym tygodniu</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card danger">
                <div class="stat-card-body">
                    <h6 class="stat-card-title">Zadania</h6>
                    <h2 class="stat-card-number">8</h2>
                    <p class="stat-card-desc">3 pilne</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Najbliższe jazdy</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Godzina</th>
                                    <th>Klient</th>
                                    <th>Koń</th>
                                    <th>Instruktor</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>10:00</td>
                                    <td>Anna Kowalska</td>
                                    <td>Książę</td>
                                    <td>Jan Nowak</td>
                                    <td><span class="badge bg-success">Potwierdzona</span></td>
                                </tr>
                                <tr>
                                    <td>11:30</td>
                                    <td>Piotr Wiśniewski</td>
                                    <td>Luna</td>
                                    <td>Maria Kwiatkowska</td>
                                    <td><span class="badge bg-warning">Oczekująca</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Zadania do wykonania</h5>
                </div>
                <div class="card-body">
                    <div class="task-list">
                        <div class="task-item">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="task1">
                                <label class="form-check-label" for="task1">
                                    Przegląd sprzętu
                                </label>
                            </div>
                            <span class="badge bg-danger">Pilne</span>
                        </div>
                        <div class="task-item">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="task2">
                                <label class="form-check-label" for="task2">
                                    Uzupełnić dokumentację
                                </label>
                            </div>
                            <span class="badge bg-info">Rutynowe</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>