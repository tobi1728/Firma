<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Intranet Stajni</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <div class="sidebar">
            <a href="/" class="sidebar-brand">
                <img src="~/content/logo.svg" alt="Logo">
            </a>
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home me-2"></i> Panel główny
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Schedule" ? "active" : "")"
                       asp-controller="Home" asp-action="Schedule">
                        <i class="fas fa-calendar me-2"></i> Grafik jazd
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Horses" ? "active" : "")"
                       asp-controller="Home" asp-action="Horses">
                        <i class="fas fa-horse me-2"></i> Zarządzanie końmi
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Reports" ? "active" : "")"
                       asp-controller="Home" asp-action="Reports">
                        <i class="fas fa-chart-bar me-2"></i> Raporty
                    </a>
                </li>
            </ul>

            <div class="mt-auto">
                <hr class="sidebar-divider">
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                       id="userDropdown" data-bs-toggle="dropdown">
                        <img src="~/content/images/inst-02.jpg" alt="" width="32" height="32"
                             class="rounded-circle me-2">
                        <strong>Jan Kowalski</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profil</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Ustawienia</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Wyloguj</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="main-content">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>