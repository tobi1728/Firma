@model Firma.Intranet.Models.Rider

@{
    ViewData["Title"] = "Usuń jeźdźca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid form-box-left">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="mb-4 text-danger">Czy na pewno chcesz usunąć jeźdźca?</h3>

            <dl class="row">
                <dt class="col-sm-3">Imię</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>

                <dt class="col-sm-3">Nazwisko</dt>
                <dd class="col-sm-9">@Model.LastName</dd>

                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Poziom</dt>
                <dd class="col-sm-9">@Model.SkillLevel</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Tak, usuń</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Anuluj</a>
            </form>
        </div>
    </div>
</div>
