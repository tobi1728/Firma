@model HorseCheckup

@{
    ViewData["Title"] = "Szczegóły przeglądu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 form-box-left" style="max-width: 1000px;">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="mb-4">Szczegóły przeglądu</h3>
            <dl class="row">
                <dt class="col-sm-3">Koń</dt>
                <dd class="col-sm-9">@Model.Horse.Name</dd>

                <dt class="col-sm-3">Data przeglądu</dt>
                <dd class="col-sm-9">@Model.CheckupDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Typ</dt>
                <dd class="col-sm-9">@Model.Type</dd>

                <dt class="col-sm-3">Notatki</dt>
                <dd class="col-sm-9">@Model.Notes</dd>
            </dl>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Edytuj
            </a>
            <a asp-action="Index" class="btn btn-secondary">Powrót</a>
        </div>
    </div>
</div>
