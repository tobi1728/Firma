@model IEnumerable<Firma.Intranet.Models.Schedule>

@{
    ViewData["Title"] = "Grafiki instruktorów";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Grafiki instruktorów</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Dodaj grafik
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Lista grafików</h5>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Instruktor</th>
                        <th>Data rozpoczęcia</th>
                        <th>Data zakończenia</th>
                        <th>Opis</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Instructor?.FirstName @item.Instructor?.LastName</td>
                            <td>@item.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@item.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@item.Description</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm me-1" title="Edytuj"><i class="fas fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm me-1" title="Szczegóły"><i class="fas fa-magnifying-glass"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm me-1" title="Usuń"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
