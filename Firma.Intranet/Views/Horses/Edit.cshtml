@model Firma.Intranet.Models.Horse

@{
    ViewData["Title"] = "Edytuj konia";
}

<div class="container mt-4 form-box-left">
    <h2 class="mb-4">Edytuj konia</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Breed" class="form-label"></label>
            <input asp-for="Breed" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Age" class="form-label"></label>
            <input asp-for="Age" class="form-control" type="number" />
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-select">
                <option>Aktywny</option>
                <option>W odpoczynku</option>
                <option>Niedostępny</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="LastCheckup" class="form-label"></label>
            <input asp-for="LastCheckup" class="form-control" type="date" />
        </div>

        <button type="submit" class="btn btn-primary">Zapisz</button>
        <a asp-controller="Home" asp-action="Horses" class="btn btn-secondary ms-2">Anuluj</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
