@model Firma.Intranet.Models.Horse

@{
    ViewData["Title"] = "Dodaj konia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 form-box-left" style="max-width: 1000px;">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="mb-4">Dodaj konia</h3>

            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <div class="row align-items-start">
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Breed" class="form-label"></label>
                            <select asp-for="Breed" class="form-select">
                                <option>Wielkopolski</option>
                                <option>Małopolski</option>
                                <option>Fryzyjski</option>
                                <option>Arabski</option>
                                <option>Hanowerski</option>
                                <option>Andaluzyjski</option>
                                <option>Inna</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Age" class="form-label"></label>
                            <input asp-for="Age" type="number" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option>Aktywny</option>
                                <option>W odpoczynku</option>
                                <option>Niedostępny</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastCheckup" class="form-label"></label>
                            <input asp-for="LastCheckup" type="date" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="WeightKg" class="form-label"></label>
                            <input asp-for="WeightKg" type="number" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="HeightCm" class="form-label"></label>
                            <input asp-for="HeightCm" type="number" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaxRiderLevel" class="form-label"></label>
                            <select asp-for="MaxRiderLevel" class="form-select">
                                <option>Początkujący</option>
                                <option>Średniozaawansowany</option>
                                <option>Zaawansowany</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Zdjęcie konia</label>
                            <input type="file" name="photo" class="form-control" accept="image/*" />

                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Zapisz</button>
                            <a asp-controller="Home" asp-action="Horses" class="btn btn-secondary ms-2">Anuluj</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
