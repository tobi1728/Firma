@model Firma.Intranet.Models.HorseCheckup

@{
    ViewData["Title"] = "Usuń przegląd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 form-box-left" style="max-width: 1000px;">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="mb-4">Usuwanie przeglądu</h3>
            <dl class="row">
                <dt class="col-sm-3">Koń</dt>
                <dd class="col-sm-9">@Model.Horse?.Name</dd>

                <dt class="col-sm-3">Data przeglądu</dt>
                <dd class="col-sm-9">@Model.CheckupDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Typ</dt>
                <dd class="col-sm-9">@Model.Type</dd>

                <dt class="col-sm-3">Notatki</dt>
                <dd class="col-sm-9">@Model.Notes</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Tak, usuń</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Anuluj</a>
            </form>
        </div>
    </div>
</div>
