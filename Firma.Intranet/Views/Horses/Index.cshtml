@model IEnumerable<Firma.Intranet.Models.Horse>
@{
    ViewData["Title"] = "Lista koni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Lista koni</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Dodaj konia
    </a>
</div>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Imię</th>
            <th>Rasa</th>
            <th>Wiek</th>
            <th>Status</th>
            <th>Ostatni przegląd</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Breed</td>
                <td>@item.Age</td>
                <td>
                    @if (item.Status == "Aktywny")
                    {
                        <span class="badge bg-success">@item.Status</span>
                    }
                    else if (item.Status == "W odpoczynku")
                    {
                        <span class="badge bg-warning text-dark">@item.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@item.Status</span>
                    }
                </td>
                <td>@item.LastCheckup?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1" title="Edytuj">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1" title="Szczegóły">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Usuń">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
