@model Firma.Intranet.Models.Horse

@{
    ViewData["Title"] = "Szczegóły konia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 form-box-left" style="max-width: 1000px;">
    <p><strong>PhotoUrl:</strong> @Model.PhotoUrl</p>

    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="mb-4">Szczegóły konia</h3>

            <div class="row align-items-start">
                <div class="col-lg-7 pe-lg-5">
                    <dl class="row">
                        <dt class="col-sm-4 col-md-4">Imię</dt>
                        <dd class="col-sm-8 col-md-8">@Model.Name</dd>

                        <dt class="col-sm-4 col-md-4">Rasa</dt>
                        <dd class="col-sm-8 col-md-8">@Model.Breed</dd>

                        <dt class="col-sm-4 col-md-4">Wiek</dt>
                        <dd class="col-sm-8 col-md-8">@Model.Age</dd>

                        <dt class="col-sm-4 col-md-4">Status</dt>
                        <dd class="col-sm-8 col-md-8">@Model.Status</dd>

                        <dt class="col-sm-4 col-md-4">Przegląd</dt>
                        <dd class="col-sm-8 col-md-8">@Model.LastCheckup?.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4 col-md-4">Waga konia</dt>
                        <dd class="col-sm-8 col-md-8">@Model.WeightKg kg</dd>

                        <dt class="col-sm-4 col-md-4">Wzrost konia</dt>
                        <dd class="col-sm-8 col-md-8">@Model.HeightCm cm</dd>

                        <dt class="col-sm-4 col-md-4">Poziom jeźdźca</dt>
                        <dd class="col-sm-8 col-md-8">@Model.MaxRiderLevel</dd>
                    </dl>
                </div>

                <div class="col-lg-5 d-flex justify-content-center">
                    @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                    {
                        <div class="border rounded shadow-sm p-2" style="min-height: 100%; max-height: 400px;">
                            <img src="@Url.Content(Model.PhotoUrl)"
                                 alt="Zdjęcie konia"
                                 class="img-fluid rounded w-100 h-100"
                                 style="object-fit: cover;" />
                        </div>
                    }
                    else
                    {
                        <div class="text-muted fst-italic">Brak zdjęcia konia</div>
                    }
                </div>
            </div>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edytuj</a>
                <a asp-controller="Home" asp-action="Horses" class="btn btn-secondary">Powrót</a>
            </div>
        </div>
    </div>
</div>
