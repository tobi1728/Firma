@{
    ViewData["Title"] = ViewBag.Title;
}

<section class="section-padding">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="section-title" data-aos="fade-up">@ViewBag.Title</h1>
            <p class="section-subtitle" data-aos="fade-up" data-aos-delay="100">@ViewBag.Subtitle</p>
        </div>

        <div class="row mb-5">
            <div class="col-md-3" data-aos="fade-up">
                <div class="stats-card">
                    <div class="stats-number">@ViewBag.Experience</div>
                    <div class="stats-label">Lat Doświadczenia</div>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="100">
                <div class="stats-card">
                    <div class="stats-number">@ViewBag.Horses</div>
                    <div class="stats-label">Koni</div>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="200">
                <div class="stats-card">
                    <div class="stats-number">@ViewBag.Students</div>
                    <div class="stats-label">Uczniów</div>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="300">
                <div class="stats-card">
                    <div class="stats-number">@ViewBag.Instructors</div>
                    <div class="stats-label">Instruktorów</div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-4" data-aos="fade-up">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="card-title">@ViewBag.Card1Title</h4>
                        <p class="card-text text-secondary">@ViewBag.Card1Text</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="card-title">@ViewBag.Card2Title</h4>
                        <p class="card-text text-secondary">@ViewBag.Card2Text</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="200">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="card-title">@ViewBag.Card3Title</h4>
                        <p class="card-text text-secondary">@ViewBag.Card3Text</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
